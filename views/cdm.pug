extends layout

block content
    h1 Copa del mundo
    h2 Youpie
    h3 test pug
    div.container
        div.row
            div(class="col-md-6")
                div(class="panel panel-default")  
                    div(class="panel-heading col-md-12")
                        p.col-md-4.text-center#equipe1 Biduleerererezrer ezefe
                        p.col-md-2.text-center#score1 0 
                        p.col-md-2.text-center#score2 0
                        p.col-md-4.text-center#equipe2 Bidule  
                    div(class="panel-body")
                        ul#listComments
            <!-- inicio de la caja de chat con bootstrap -->
            div(class="col-md-4")
                div(class="panel panel-primary")
                    div(class="panel-heading")
                        span(class="far fa-comments" id="onglet_messages" onclick="javascript:change_onglet('messages');") Chat
                        span(class="far fa-comments" id="onglet_users" onclick="javascript:change_onglet('users');") Users 
                    div(class="panel-body contenu_onglet" id="contenu_onglet_messages" style="height: 200px; max-height: 200px;overflow-y: scroll; display:block")
                        ul#listMessage 
                    div(class="panel-body contenu_onglet" id="contenu_onglet_users" style="height: 200px; max-height: 200px;overflow-y: scroll; display:none")
                        ul#listUsers
                    div.panel-footer
                        form(action="" class="input-group" id="messageForm")
                            input#message(type="text" class="form-control input-sm" name="message" placeholder="Ecrire un message...")
                            span.input-group-btn
                                input(type="submit" value="Envoyer" class="btn btn-warning btn-sm btnEnvoyer")          
    script.
        //<!--
                var anc_onglet = 'messages';
                change_onglet(anc_onglet);
        //-->
    script(src="/socket.io/socket.io.js")
    script(type="text/javascript" src="js/client.js")